@{
    ViewData["Title"] = "Not Found Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Not Found</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #e0f7fa, #e1bee7);
            font-family: Arial, sans-serif;
            overflow: hidden;
        }

        .not-found-container {
            text-align: center;
            animation: fadeIn 2s;
        }
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        .figure {
            animation: float 3s infinite ease-in-out;
        }
        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-20px);
        }

        }

        .btn-home {
            margin-top: 20px;
            animation: bounce 2s infinite;
        }
        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100%

        {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-10px);
        }

        60% {
            transform: translateY(-5px);
        }

        }
    </style>
</head>
<body>
    <div class="not-found-container">
        <svg class="figure" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" width="120" height="120" fill="none" stroke="#00796b" stroke-width="2">
            <circle cx="32" cy="32" r="30" stroke-dasharray="4 2" />
            <line x1="20" y1="20" x2="44" y2="44" stroke-linecap="round" />
            <line x1="20" y1="44" x2="44" y2="20" stroke-linecap="round" />
        </svg>
        <h1 class="text-danger">Oops! Page Not Found</h1>
        <p class="text-muted">It looks like you've wandered off the beaten path.</p>
        <a class="btn btn-outline-success btn-home" asp-controller="Movies" asp-action="Index">Go Back to Home</a>
    </div>
</body>
</html>
