@model List<Actor>


@{
	ViewData["Title"] = "List of Actors";
}

<div class="row">
	<div class="col-md-8 offset-md-2">
		
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>
						Profile Picture
					</th>
					<th>
						Full Name
					</th>
					<th>
						Biography
					</th>
					<th>
						Actions
					</th>
				</tr>
			</thead>

			<tbody>
				@if(Model != null){
					@foreach (var item in Model)
					{
						<tr>
							<td class="align-middle">
								<img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width:150px" />
							</td>
							<td class="align-middle">
								Full Name : @item.FullName
							</td>
							<td class="align-middle">
								Bio: @item.Bio
							</td>
							<td class="align-middle">
								<a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a>
								<a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a>
								<a class="btn btn-danger"><i class="bi bi-trash">Delete</i></a>

							</td>


						</tr>
					}
				}
		
			</tbody>

		</table>
	</div>
</div>